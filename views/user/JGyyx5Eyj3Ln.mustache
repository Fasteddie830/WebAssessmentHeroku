<html>

<head>
    {{>header}}
</head>

<body>
    <div id="body-main">
        <div id="aboutMain">
            <div id="aboutWrapper">
                <h1>{{title}}</h1>
                <h2>Sign In</h2>
                <div id="formContent">
                    <!-- Login Form -->
                    <form method="POST" action="/login">
                        <div class="form-group">
                            <label for="username" class="col-sm-2 col-formlabel">
                                User Name
                            </label>
                            <div >
                                <input type="text" id="username" name="username" placeholder="username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-sm-2 col-formlabel">
                                Password
                            </label>
                            <div >
                                <input type="password" id="password" name="password" placeholder="password">
                            </div>
                        </div>
                        <input type="submit" value="Sign In" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>